/**index.wxss**/

.container {
    display: flex;
    flex-direction: column;
    height: 100%;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.title {
    text-align: center;
    padding: 20rpx;
    color: white;
    height: 220rpx;
    font: 320%/1 Rockwell, serif;
    text-shadow: 0 1rpx hsl(0, 0%, 85%),
        0 2rpx hsl(0, 0%, 80%),
        0 3rpx hsl(0, 0%, 75%),
        0 4rpx hsl(0, 0%, 70%),
        0 5rpx hsl(0, 0%, 65%),
        0 5rpx 10rpx black;
}

.primary-button {
    width: 72%;
    background-color: #1AAD19;
    color: white;
    padding: 20rpx;
    font-weight: bolder;
    font-size: large;
    margin: 32rpx;
}


wux-input-number {
    display: inline-block;
}

.information {
    color: red;
    text-align: center;
    padding: 10rpx;
    padding-top: 24rpx;
    font-size: 36rpx;
}